<div class="container">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-lg-12 col-xl-11 m-2">
      <div class="card text-black" style="border-radius: 25px;box-shadow: 0px 0px 15px 0px rgb(145, 145, 145);">
        <div class="card-body">
          <div class="row justify-content-center">
            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
              <p class="text-center h1 fw-bold mx-1 mx-md-4 pt-lg-0 pt-3 pb-lg-3">Sign up</p>
              {{#if signupErr}}
                <p class="text-center validation-label">{{signupErr}}</p>
              {{/if}}
              {{!-- FORM --}}
              <form class="mx-1 mx-md-4" action="/signup" method="post">
                <div class="d-flex flex-row align-items-center mb-2">
                  <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    <input type="text" id="name" placeholder="full name" name="name" class="form-control" onkeyup="validateName()"/>
                    <div class="d-flex">
                      <label class="form-label text-dark" for="form3Example1c">Name</label><br>
                      <span id="name-error" class="validation-label pl-3 ms-auto"></span>
                    </div>
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-2">
                  <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    <input type="email" id="email" placeholder="email" name="email" class="form-control" onkeyup="validateEmail()"/>
                    <div class="d-flex">
                      <label class="form-label text-dark" for="form3Example3c">Email</label><br>
                      <span id="email-error" class="validation-label pl-3 ms-auto"></span>
                    </div>
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-2">
                  <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    <input type="tel" id="mobile" placeholder="mobile number without country code" name="mobile" class="form-control" maxlength="10" onkeyup="validateMobile()"/>
                    <div class="d-flex">
                      <label class="form-label text-dark" for="form3Example3c">Mobile</label><br>
                      <span id="mobile-error" class="validation-label pl-3 ms-auto"></span>
                    </div>
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-2">
                  <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    <input type="password" placeholder="password" name="password" id="password" class="form-control" onkeyup="validatePassword()"/>
                    <div class="d-flex">
                      <label class="form-label text-dark" >Password</label><br>
                      <span id="password-error" class="validation-label pl-3 ms-auto"></span>
                    </div>
                  </div>
                </div>
                
                <div class="d-flex flex-row align-items-center mb-2">
                  <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    <input type="password" placeholder="re-enter password" id="password2" class="form-control" onkeyup="validateRePassword()"/>
                    <div class="d-flex">
                      <label class="form-label text-dark">Re-enter Password</label><br>
                      <span id="password2-error" class="validation-label pl-3 ms-auto"></span>
                    </div>
                  </div>
                </div>
                {{!-- till here --}}
                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    <a href="/login" style="text-decoration: none;">already have an account?</a>
                  </div>
                </div>

                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                  <button type="submit" class="btn btn-primary btn-lg" style="letter-spacing: 0.2rem;" onclick="return validateForm()">Register</button><br>
                </div>
                <span id="submit-error" class="validation-label"></span>
              </form>

            </div>
            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
              {{!-- <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" --}}
              <img src="/images/signupColor.png"
                class="img-fluid rounded-right" style="width: fit-content;" alt="Sample image">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="/user-js/signup-validation.js"></script>