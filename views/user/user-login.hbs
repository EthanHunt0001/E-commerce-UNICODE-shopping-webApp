<div class="container">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-lg-12 col-xl-11 m-2">
      <div class="card text-black mt-lg-2" style="border-radius: 25px; box-shadow: 0px 0px 40px 0px rgb(144, 144, 144);">
        <div class="card-body">
          <div class="row justify-content-center">
            
            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
              <div class="d-flex">
                <p class="fs-6 pb-lg-2 pt-lg-0 pt-3 ms-auto">Don't have an Account? <a href="/signup" style="text-decoration: none;"><span style="color: orange;">Create Now</span></p></a>
              </div>
                <p class="text-center h1 fw-bold mx-1 mx-md-4">Login</p>
              
              {{!-- FORM --}}
              <form class="mx-1 mx-md-4" action="/login" method="post">
                <div class="d-flex flex-row align-items-center mb-4">
                  {{!-- <i class="fas fa-user fa-lg me-3 fa-fw"></i> --}}
                  <div class="form-outline flex-fill mb-0">
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  {{!-- <i class="fas fa-envelope fa-lg me-3 fa-fw"></i> --}}
                  <div class="form-outline flex-fill mb-0">
                    <input type="email" id="email" name="email" class="form-control"/>
                    <label class="form-label" for="form3Example3c">Email</label><br>
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center">
                  {{!-- <i class="fas fa-lock fa-lg me-3 fa-fw"></i> --}}
                  <div class="form-outline flex-fill mb-0">
                    <input type="password" name="password" id="password" class="form-control"/>
                    <label class="form-label" >Password</label><br>
                    <div class="d-flex mb-1">
                        {{#if loginErr}}
                            <p class="error text-danger pr-3">{{loginErr}}</p>
                        {{/if}}
                      <a href="/forgotPassword" class="ms-auto" style="text-decoration: none;"><p class="text-primary">Forgot password?</p></a>  {{!-- FORGOT PASSWORD --}}
                    </div>
                  </div>
                </div>

                <div class="d-flex justify-content-center mx-4 mb-2 mb-lg-3">
                  <button type="submit" class="btn btn-primary w-50" style="letter-spacing: 0.1rem;">Login</button><br>
                </div>
                
              </form>
              <p class="d-flex justify-content-center text-dark" style="letter-spacing: 0.1rem;font-size: 1.2rem;"><b>or</b></p>
              {{!-- <div class="d-flex justify-content-center pb-2">
                <div class="pr-2">
                  <input type="tel" class="bg-transparent btn btn-dark" style="color: black;" placeholder="Enter registered mobile">
                </div>
                <div class="btn btn-primary">send OTP</div>
              </div> --}}
              <div class="d-flex justify-content-center mx-4 mb-2 mb-lg-3">
                  <a href="/login/otp"><button type="submit" style="letter-spacing: 0.1rem;" class="btn btn-primary">Login with OTP</button></a><br>
              </div>
              
              
            </div>
            <div class="col-md-10 col-lg-6 col-xl-7 d-flex order-1 order-lg-2">
              <img src="/images/login1.png" class="img-fluid mx-auto rounded-right" alt="Sample image">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>