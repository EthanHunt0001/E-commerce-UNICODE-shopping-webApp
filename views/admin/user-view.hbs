<section class="container bg-white mt-3">
    <div class="row">
        <h1 class="mt-3 fw-bold">Users</h1>
        <div class="mt-2 d-flex"><a href="/admin/users/add-user" class="btn btn-success ms-auto">Add Users</a></div>
    </div>
    <div class="text-center">
      <div class="row table-responsive col-lg-12">
        <table class="table" style="width:100%" id="productsTable">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Mobile Number</th>
              <th scope="col">Edit</th>
              {{!-- <th scope="col">Delete</th> --}}
              <th scope="col">Block</th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
                <tr>
                  <td>{{this.name}}</td>
                  <td>{{this.email}}</td>
                  <td>{{this.mobile}}</td>
                  <td><a href="/admin/users/edit-user/{{this._id}}" class="btn btn-primary">Edit</a> &nbsp;</td>
                  {{#if this.isblocked}}
                    <td><a class="btn btn-warning" data-toggle="modal" data-target="#unblock{{this._id}}">unblock</a></td>
                  {{else}}
                    <td><a class="btn btn-danger" data-toggle="modal" data-target="#block{{this._id}}">block</a></td>
                  {{/if}}
                </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
</section>

{{!-- block and unblock user --}}
{{#each users}}
  <div class="modal fade" id="block{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Confirmation</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Do you want to block {{this.name}} ?
        </div>
        <div class="modal-footer">
          <a href=""><button type="button" class="btn btn-secondary" data-dismiss="modal">cancel</button></a>
          <a href="/admin/users/block-user/{{this._id}}"><button type="button" class="btn btn-primary">block</button></a>
        </div>
      </div>
    </div>
  </div>
{{/each}}

{{!-- unblock modal --}}
{{#each users}}
  <div class="modal fade" id="unblock{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Confirmation</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Do you want to unblock {{this.name}} ?
        </div>
        <div class="modal-footer">
          <a href=""><button type="button" class="btn btn-secondary" data-dismiss="modal">cancel</button></a>
          <a href="/admin/users/unblock-user/{{this._id}}"><button type="button" class="btn btn-primary">unblock</button></a>
        </div>
      </div>
    </div>
  </div>
{{/each}}

<script>

$(function () {
  $('#productsTable').DataTable();
});

</script>