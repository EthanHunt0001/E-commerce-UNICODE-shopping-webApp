<style>
    .btn{
        margin-bottom: 0;
    }
</style>
<section class="container bg-white mt-3 py-3" style="overflow-x: hidden;">
    <div class="d-flex mt-3">
        <h1 class="fw-bold">Sales Report</h1>
        <form action="/admin/salesReportFilter" class="mt-4 mr-5 ml-auto" method="post">
          <div class="d-block" style="font-weight: bold;color: black;">
              <label for="filter" style="font-size: medium;">Filter Report : &nbsp;</label>
          </div>
          <div class="d-flex">
            <div>
                <label>FROM : </label>
                <input type="date" value="newDate.[0]" name="date" id="date">
                <label class="ml-4">TO : </label>
                <input type="date" value="newDate.[1]" name="date" id="date">
                <span class="pl-4 m-0">
                    <input type="submit" value="submit" class="btn-sm btn text-light" style="background-color: rgb(160, 160, 160);">
                </span>
            </div>
          </div>
        </form>
    </div>
    
    <h5 class="pt-5" style="font-weight: bold;">Total Earnings: Rs.{{totalEarnings}}</h5>
    <div class="text-center pt-2">
      <div class="row table-responsive col-lg-12">
        <table class="table table-bordered" style="width:100%" id="productsTable">
          <thead class="text-dark">
            <tr>
              <th style="font-weight: bold;" scope="col">Date</th>
              <th style="font-weight: bold;" scope="col">Order Id</th>
              <th style="font-weight: bold;" scope="col">User Name</th>
              <th style="font-weight: bold;" scope="col">Item</th>
              <th style="font-weight: bold;" scope="col">Price</th>
              <th style="font-weight: bold;" scope="col">Payment Method</th>
            </tr>
          </thead>
          <tbody>
            {{#each deliveredOrders}}
                <tr>
                    <th class="text-dark">{{this.date}}</th>
                    <th class="text-dark">{{this._id}}</th>
                    <th class="text-dark">{{this.userName}}</th>
                    <th class="text-dark">{{this.productCount}}</th>
                    <th class="text-dark">{{this.totalCost}}</th>
                    <th class="text-dark">{{this.paymentMethod}}</th>
                </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
</section>

<script>

$(document).ready(function() {
    $('#productsTable').DataTable( {
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    } );
});

</script>