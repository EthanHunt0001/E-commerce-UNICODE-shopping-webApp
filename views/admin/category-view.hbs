<section class="container bg-white mt-3">
    <div class="row">
        <h1 class="mt-3 fw-bold">Category</h1>
        <div class="mt-2 d-flex d-lg-none d-md-none"><a href="/admin/add-category" class="btn btn-success ms-auto">Add Category</a></div>
    </div>

    <div class="row">
      <div class="col-lg-8 col-md-6 col-12 col-xs-12 border">
        <table class="table table-hover" id="productsTable">
          <thead>
            <tr>
              <th scope="col">Category Name</th>
              <th scope="col">Category Status</th>
            </tr>
          </thead>
          <tbody>
            {{#each categories}}
                <tr>
                  <td>{{this.name}}</td>
                  {{#if this.listingStatus}}
                    <td><a class="btn btn-warning" data-toggle="modal" data-target="#unlist{{this._id}}">Unlist</a></td>
                  {{else}}
                    <td><a class="btn btn-danger" data-toggle="modal" data-target="#list{{this._id}}">List</a></td>
                  {{/if}}
                </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

      <div class="col-lg-4 col-md-6 d-md-block d-none">

        <h2 class="fw-bold">ADD CATEGORY</h2>
        <form action="/admin/add-category" style="margin-top: 2em;" method="post">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" name="name" required>
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <input type="text" class="form-control" name="description" required>
            </div>
            <input type="text" class="form-control d-none" value="true" name="listingStatus">
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>

      </div>
    </div>
    
</section>

{{!-- list modal --}}
{{#each categories}}
  <div class="modal fade" id="list{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Confirmation</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Do you want to List {{this.name}} ?
        </div>
        <div class="modal-footer">
          <a href=""><button type="button" class="btn btn-secondary" data-dismiss="modal">cancel</button></a>
          <a href="/admin/list-category/{{this._id}}"><button type="button" class="btn btn-primary">confirm</button></a>
        </div>
      </div>
    </div>
  </div>
{{/each}}

{{!-- unlist modal --}}
{{#each categories}}
  <div class="modal fade" id="unlist{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Confirmation</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Do you want to Unlist {{this.name}} ?
        </div>
        <div class="modal-footer">
          <a href=""><button type="button" class="btn btn-secondary" data-dismiss="modal">cancel</button></a>
          <a href="/admin/unlist-category/{{this._id}}"><button type="button" class="btn btn-primary">confirm</button></a>
        </div>
      </div>
    </div>
  </div>
{{/each}}