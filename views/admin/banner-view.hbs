<style>
  .disabled {
    pointer-events: none;
    opacity: 0.5; /* optional - to indicate the element is disabled */
  }
</style>
<section class="container bg-white mt-3">
    <div class="row">
        <h1 class="mt-3 fw-bold">Banner Manage</h1>
        <div class="mt-2 d-flex"><a href="/admin/add-banner" class="btn btn-success ms-auto">Add Banner</a></div>
    </div>

    <div class="text-center mt-4">
      <div class="row table-responsive col-lg-12">
        <table class="table" style="width:100%" id="productsTable"> 
          <thead>
            <tr>
              {{!-- <th scope="col">Banner Name</th> --}}
              <th scope="col">Banner Heading</th>
              <th scope="col">Banner Image</th>
              <th scope="col">Edit Option</th>
              <th scope="col">Set Active Option</th>
            </tr>
          </thead>
          <tbody>
            {{#each banners}}
                <tr>
                  <td>{{this.heading}} {{this.boldHeading}}</td>
                  <td><img style="width: 40px;height:40px" src="{{this.image}}"></td>
                    <td><a href="/admin/edit-banner/{{this._id}}" class="btn btn-primary" style="font-weight: bold;">Edit Banner</a></td>
                    {{#if this.active}}
                      <td><a class="btn btn-success disabled" style="font-weight: bold;">selected</a></td>
                    {{else}}
                      <td><a class="btn btn-success" style="font-weight: bold;" data-toggle="modal" data-target="#select{{this._id}}">select</a></td>
                    {{/if}}
                </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
    
</section>

{{!-- select modal --}}
{{#each banners}}
  <div class="modal fade" id="select{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Confirmation</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Do you want to select this Banner ?
        </div>
        <div class="modal-footer">
          <a href=""><button type="button" class="btn btn-secondary" data-dismiss="modal">cancel</button></a>
          <a href="/admin/selectBanner/{{this._id}}"><button type="button" class="btn btn-primary">select</button></a>
        </div>
      </div>
    </div>
  </div>
{{/each}}
